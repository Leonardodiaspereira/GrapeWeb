    <!-- JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
    $(document).ready(function () {
        // Newsletter
       $('#assinarBtn').click(function () {
            var email = $('#email').val().trim();
            if (!email) {
                toastr.error('Por favor, insira um e-mail válido.');
                return;
            }

            $.ajax({
                url: '@Url.Action("AssinarNewsletter", "Promocao")',
                type: 'POST',
                data: { email: email },
                success: function (response) {
                    if (response.sucesso) {
                        toastr.success(response.mensagem);
                        $('#email').val('');
                    } else {
                        toastr.error(response.mensagem);
                    }
                },
                error: function () {
                    toastr.error('Erro ao enviar o e-mail. Por favor, tente novamente.');
                }
            });
        });

        // Login
        $('#loginBtn').click(function () {
            var email = $('#login-email').val().trim();
            var senha = $('#login-senha').val().trim();
            if (!email || !senha) {
                toastr.error('Por favor, preencha todos os campos.');
                return;
            }

            $.ajax({
                url: '@Url.Action("Login", "Cliente")',
                type: 'POST',
                data: { email: email, senha: senha },
                success: function (response) {
                    if (response.sucesso) {
                        toastr.success(response.mensagem);
                    } else {
                        toastr.error(response.mensagem);
                    }
                },
                error: function () {
                    toastr.error('Erro ao tentar efetuar o login. Tente novamente.');
                }
            });
        });

        // Criar Conta
        $('#criarContaBtn').click(function () {
            var cliente = {
                Nome: $('#criar-nome').val().trim(),
                Email: $('#criar-email').val().trim(),
                Telefone: $('#criar-telefone').val().trim(),
                CPF: $('#criar-cpf').val().trim(),
                Senha: $('#criar-senha').val().trim()
            };
            var confirmarSenha = $('#criar-confirmar-senha').val().trim();

            // Validações dos campos
            var nomeRegex = /^[A-Za-zÀ-ÖØ-öø-ÿ\s]+$/;
            var telefoneRegex = /^\d{10,15}$/;
            var cpfRegex = /^\d{11}$/;


            if (!cliente.Email || cliente.Email.indexOf('@@') === -1) {
                toastr.error('Por favor, insira um e-mail válido.');
                return;
            }

            if (!cliente.Nome || !nomeRegex.test(cliente.Nome)) {
                toastr.error('Por favor, insira um nome válido (somente letras).');
                return;
            }

            if (!cliente.Telefone || !telefoneRegex.test(cliente.Telefone)) {
                toastr.error('Por favor, insira um telefone válido (somente números, entre 10 e 15 dígitos).');
                return;
            }

            if (!cliente.CPF || !cpfRegex.test(cliente.CPF)) {
                toastr.error('Por favor, insira um CPF válido (11 dígitos).');
                return;
            }

            if (!cliente.Senha || cliente.Senha.length < 8) {
                toastr.error('A senha deve ter no mínimo 8 caracteres.');
                return;
            }

            if (cliente.Senha !== confirmarSenha) {
                toastr.error('As senhas não coincidem.');
                return;
            }

            
            $.ajax({
                url: '@Url.Action("CriarConta", "Cliente")',
                type: 'POST',
                data: cliente,
                success: function (response) {
                    if (response.sucesso) {
                        toastr.success(response.mensagem);
                        $('#criar-nome, #criar-email, #criar-telefone, #criar-cpf, #criar-senha, #criar-confirmar-senha').val('');
                    } else {
                        toastr.error(response.mensagem);
                    }
                },
                error: function () {
                    toastr.error('Erro ao tentar criar a conta. Tente novamente.');
                }
            });
        });
    });
    </script>
